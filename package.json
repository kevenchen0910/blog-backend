{
  "name": "blog-backend",
  "version": "0.0.1",
  "description": "Backend service for blog system, base on Nestjs + Prismajs.",
  "keywords": [
    "blog",
    "nestjs",
    "prisma",
    "node",
    "azure",
    "azure function"
  ],
  "author": "Keven Chen <han7586917@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KevenChesn/blog-backend.git"
  },
  "bugs": {
    "url": "https://github.com/KevenChesn/blog-backend/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "serve:azure": "func host start",
    "dev": "cross-env NODE_ENV=development nest start --watch",
    "dev:azure": "cross-env NODE_ENV=development run-p build:watch serve:azure",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:watch": "nest build --watch",
    "start": "node dist/src/main",
    "start:azure": "run-s build serve:azure",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@devoxa/prisma-relay-cursor-connection": "^2.2.2",
    "@nestjs/apollo": "^10.0.17",
    "@nestjs/azure-func-http": "^0.8.0",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.4.7",
    "@nestjs/graphql": "^10.0.18",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^8.4.7",
    "@prisma/client": "^4.0.0",
    "apollo-server-core": "^3.9.0",
    "apollo-server-express": "^3.9.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dayjs": "^1.11.3",
    "dotenv": "^16.0.1",
    "graphql": "^16.5.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@azure/functions": "^1.0.3",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^8.4.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "express": "^4.18.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prisma": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.(test|spec).ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "insertPragma": false,
    "printWidth": 120,
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier/prettier",
      "plugin:import/errors",
      "plugin:import/typescript"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "ignorePatterns": [
      "node_modules/**",
      "dist/**"
    ],
    "rules": {
      "import/order": [
        2,
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "import/extensions": 0,
      "import/prefer-default-export": 0,
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "@azure/functions"
          ]
        }
      ],
      "class-methods-use-this": 0,
      "no-console": [
        2,
        {
          "allow": [
            "info",
            "warn",
            "error"
          ]
        }
      ],
      "@typescript-eslint/no-shadow": 0
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "git add"
    ]
  }
}
